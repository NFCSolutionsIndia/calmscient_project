            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/lexendlight"
            android:textColor="@color/black_head"
            android:layout_margin="@dimen/_2sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
