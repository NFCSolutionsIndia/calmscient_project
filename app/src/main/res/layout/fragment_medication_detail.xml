<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_46sdp"
    tools:context=".fragments.MedicationDetailFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@+id/back_icon"
                android:ellipsize="end"
                android:fontFamily="@font/lexendmedium"
                android:maxLines="1"
                android:text="@string/medication_Details"
                android:textAlignment="center"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_16sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:background="#E8E7F4">

            <ImageView
                android:id="@+id/tablets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_medical_detail" />

            <TextView
                android:id="@+id/tv_dosageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/lexendmedium"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_toEndOf="@+id/tablets"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/tv_doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dosageName"
                android:fontFamily="@font/lexendregular"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_toEndOf="@+id/tablets"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/medicationsCard"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="20dp"
            android:allowClickWhenDisabled="true"
            android:clickable="true"
            app:cardElevation="@dimen/_10sdp"
            app:cardCornerRadius="10dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/dosadetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendregular"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="20dp"
                        android:text="@string/dosage"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_dosageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dosadetext"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:fontFamily="@font/lexendregular"
                        android:textColor="#000000"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/directiontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/lexendregular"
                        android:text="@string/direction"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_directionValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_below="@+id/directiontext"
                        android:fontFamily="@font/lexendregular"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/lexendregular"
                android:text="@string/schedule_time_and_alarm"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/morningAlarmCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/dialog_border"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_10sdp"
            app:cardPreventCornerOverlap="false">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/morningTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/black_head"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/morning"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/morningTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/tv_morningTimeFormat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendmedium"
                            android:text="AM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_morning" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/alarmTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black_head"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/alarm"
                            android:textSize="@dimen/_12sdp" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/alarmToggleButtonMorning"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:textSize="14sp"
                            app:on="false" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/morningAlarmTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendmedium"
                            android:text="AM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/afternoonAlarmCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/dialog_border"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_10sdp"
            app:cardPreventCornerOverlap="false">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/afternoonTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/black_head"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/afternoon"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/afternoonTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendmedium"
                            android:text="PM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_afternoon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/afternoonAlarmTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black_head"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/alarm"
                            android:textSize="@dimen/_12sdp" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/alarmToggleButtonAfternoon"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:textSize="14sp"
                            app:on="false" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/afternoonAlarmTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendmedium"
                            android:text="PM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/eveningAlarmCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/dialog_border"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_10sdp"
            app:cardPreventCornerOverlap="false">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/eveningTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textColor="@color/black_head"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/evening"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/eveningTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendregular"
                            android:text="PM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_evening" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/eveningAlarmTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black_head"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/lexendregular"
                            android:text="@string/alarm"
                            android:textSize="@dimen/_12sdp" />

                        <com.github.angads25.toggle.widget.LabeledSwitch
                            android:id="@+id/alarmToggleButtonEvening"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"
                            android:textSize="14sp"
                            app:on="false" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/eveningAlarmTimeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexendmedium"
                            android:textColor="@color/purple_100"
                            android:text="00:00"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:fontFamily="@font/lexendmedium"
                            android:text="PM"
                            android:visibility="gone"
                            android:textColor="@color/purple_100"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                </LinearLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonUpdateMedicationSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/lexendregular"
        android:gravity="center"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
