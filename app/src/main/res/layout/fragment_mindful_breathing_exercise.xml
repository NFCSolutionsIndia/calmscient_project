<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_50sdp"
    tools:context=".fragments.MindfulBreathingExerciseFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mindful_breathing_exercise"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/lexendmedium" />

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/viewbackgroundcolor"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:elevation="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preparation"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black_head"
                        android:fontFamily="@font/lexendregular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First find a comfortable to either sit down or lay down. You can close your eyes if you want to."
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="@color/black_head"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/lexendlight"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let’s learn how to do the mindful breathing exercise."
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black_head"
                    android:fontFamily="@font/lexendregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/verticalLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp">

                        <!-- Vertical Line -->
                        <View
                            android:id="@+id/progressBar2"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="0dp"
                            android:background="@color/purple_100"
                            app:layout_constraintTop_toTopOf="@+id/step1Indicator"
                            app:layout_constraintBottom_toBottomOf="@+id/step6Indicator"
                            app:layout_constraintStart_toStartOf="@+id/step1Indicator"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.02"/>

                        <!-- Guidelines for evenly spacing the indicators -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.15"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.28"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.48"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.58"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.78"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.8"
                            app:layout_constraintGuide_begin="525dp" />


                        <!-- Step 1 Indicator -->
                        <ImageView
                            android:id="@+id/step1Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/guideline1"/>

                        <!-- Step 2 Indicator -->
                        <ImageView
                            android:id="@+id/step2Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline1"
                            app:layout_constraintBottom_toTopOf="@id/guideline2"/>

                        <!-- Step 3 Indicator -->
                        <ImageView
                            android:id="@+id/step3Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline2"
                            app:layout_constraintBottom_toTopOf="@id/guideline3"/>

                        <!-- Step 4 Indicator -->
                        <ImageView
                            android:id="@+id/step4Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline3"
                            app:layout_constraintBottom_toTopOf="@id/guideline4"/>

                        <!-- Step 5 Indicator -->
                        <ImageView
                            android:id="@+id/step5Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline4"
                            app:layout_constraintBottom_toTopOf="@id/guideline5"/>

                        <!-- Step 6 Indicator -->
                        <ImageView
                            android:id="@+id/step6Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline6"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4.9">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 1: Inhale"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Inhale through your nose until the tummy expands."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 2: Exhale slowly and repeat it"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Exhale slowly through your mouse. And repeat the process."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 3: Focus on the breath"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Once settled into the pattern, focus on the breath coming in through the nose and out through the mouth"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 4: Focus on the tummy"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Notice the rise and fall of the tummy as the breath come in and out"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 5: Focus on the mind"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="As thoughts come into the head, notice that they are there without judgment, then let them go and bring the attention back to the breathing."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 6: Focus on the connection between mind and body."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Carry on until feeling calm, then start to be aware of how the body and mind feel."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Now, let’s dive into it. Pay careful attention to the following video."
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@color/black_head"
                android:fontFamily="@font/lexendlight"/>

            <RelativeLayout
                android:id="@+id/videoFrameLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <!-- ExoPlayerView -->
                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/playerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerInParent="true"
                    app:buffered_color="@color/example_7_button"
                    app:resize_mode="fit"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:show_buffering="always"
                    app:use_controller="true" />
                <!--<ImageView
                    android:id="@+id/thumbnailImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu" />-->

                <!-- Back Icon -->
                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back_white"
                    android:visibility="gone" />

                <!-- Favorites Icon -->
                <ImageButton
                    android:id="@+id/favoritesIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Favorites"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_favorites_icon" />

                <!-- Orientation Icon -->
                <ImageButton
                    android:id="@+id/orientationBtn"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/playerViewLayout"
                    android:layout_alignEnd="@id/playerViewLayout"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_orientation_icon"
                    android:visibility="visible"
                    android:contentDescription="Orientation" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Engage in this practice regularly, allowing the mindful breathing technique to guide you towards a state of tranquility and mindful breathing."
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textColor="@color/black_head"
                android:fontFamily="@font/lexendlight"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>