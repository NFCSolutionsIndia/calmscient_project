<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/questions_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/sfprotextsemibold"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_15sdp"
            android:layout_margin="@dimen/_13sdp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"

            android:textAllCaps="false"
            android:fontFamily="@font/sfprotextmedium"
            android:textColor="@color/example_7_button"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"/>
        <ImageView
            android:id="@+id/anxietybulb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginStart="@dimen/_210sdp" />
        <ImageView
            android:id="@+id/imageanxiety"
            android:layout_marginTop="-30dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textAllCaps="false"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:fontFamily="@font/sfprotextregular"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textAllCaps="false"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sfprotextsemibold"
            android:textColor="@color/example_7_button"
            android:textSize="@dimen/_15sdp"
            android:layout_margin="@dimen/_16sdp"/>
    </LinearLayout>

</ScrollView>