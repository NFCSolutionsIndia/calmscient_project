<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.ButterflyHugExercisesActivity"
    tools:ignore="MissingDefaultResource">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:layout_toRightOf="@+id/menuicon"
            android:fontFamily="@font/lexendregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/butterflyhug_exercises"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_18sdp" />

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/viewbackgroundcolor"/>
    <LinearLayout
        android:id="@+id/contentText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/butterflyhug_execises_png"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_250sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/mindfullexercise_heart__image"/>
     </RelativeLayout>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="@string/butterflyScreen1_text1"
             android:fontFamily="@font/lexendlight"
             android:textSize="@dimen/_14sdp"/>
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="@string/butterflyScreen1_text2"
             android:fontFamily="@font/lexendlight"
             android:textSize="@dimen/_14sdp"/>
     </LinearLayout>
    <LinearLayout
        android:id="@+id/contentText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_25sdp"
            android:text="HOW TO DO IT?"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/black_head"
            android:fontFamily="@font/lexendregular"
            android:textSize="@dimen/_14sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_12sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
            android:text="@string/butterflyScreen2_text1"
            android:fontFamily="@font/lexendregular"
             android:textColor="@color/black_head"
            android:textSize="@dimen/_12sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/butterflyhand_image1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/butterflyScreen2_text2"
                android:fontFamily="@font/lexendregular"
               android:padding="@dimen/_10sdp"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_12sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/butterflyhand_image2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="@string/butterflyScreen2_text3"
                android:fontFamily="@font/lexendregular"
                android:paddingHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_12sdp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/previousQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:clickable="true"
            android:paddingRight="@dimen/_190sdp"
            android:src="@drawable/ic_question_back" />
           <ImageView
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_next_question" />
    </LinearLayout>
</LinearLayout>
   </ScrollView>