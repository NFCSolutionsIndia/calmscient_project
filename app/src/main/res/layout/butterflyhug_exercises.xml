<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.ButterflyHugExercisesFragment"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/menuicon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/menuicon"
            android:fontFamily="@font/lexendregular"
            android:layout_marginStart="@dimen/_10sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/butterflyhug_exercises"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/viewbackgroundcolor"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fillViewport="true">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contentText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/butterflyhug_execises_png"/>
                    <ImageView
                        android:id="@+id/favoritesIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:src="@drawable/mindfullexercise_heart__image"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="@string/butterflyScreen1_text1"
                    android:fontFamily="@font/lexendlight"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_14sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:text="@string/butterflyScreen1_text2"
                    android:fontFamily="@font/lexendlight"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_14sdp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_25sdp"
                    android:text="@string/how_to_do"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/lexendlight"
                    android:textColor="@color/black_head"
                    android:textSize="@dimen/_14sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_65sdp"
                        android:src="@drawable/progressbar_image"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="@dimen/_12sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_10sdp"
                                    android:text="@string/butterflyScreen2_text1"
                                    android:fontFamily="@font/lexendlight"
                                    android:textColor="@color/black_head"
                                    android:textSize="@dimen/_14sdp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_butterfly_1"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/_12sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp">
                            <LinearLayout
                                android:layout_width="@dimen/_230sdp"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/butterflyScreen2_text2"
                                    android:padding="@dimen/_10sdp"
                                    android:fontFamily="@font/lexendlight"
                                    android:textColor="@color/black_head"
                                    android:textSize="@dimen/_14sdp"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/butterfly_new_23"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_230sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp">
                            <TextView
                                android:layout_width="@dimen/_230sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/butterflyScreen2_text3"
                                android:padding="@dimen/_10sdp"
                                android:fontFamily="@font/lexendlight"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_14sdp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_50sdp">

        <ImageView
            android:id="@+id/previousQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/ic_question_back" />

        <ImageView
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:src="@drawable/ic_next_question" />
    </RelativeLayout>
</LinearLayout>
