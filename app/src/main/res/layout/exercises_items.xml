<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/lexendmedium"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_15sdp"
            android:layout_margin="@dimen/_13sdp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/lexendlight"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"/>

        <ImageView
            android:id="@+id/exercisesBellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginStart="@dimen/_180sdp" />
        <ImageView
            android:id="@+id/exercisesHeartImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="@dimen/_220sdp" />
        <ImageView
            android:id="@+id/imageAnxiety"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>