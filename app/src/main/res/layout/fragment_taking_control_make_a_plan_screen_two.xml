<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_45sdp"
    tools:context=".fragments.TakingControlMakeAPlanScreenTwoFragment">


    <RelativeLayout
        android:id="@+id/makeAPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexendmedium"
            android:text="Make a plan"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/viewbackgroundcolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Quitting is strongly advised if you:"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:layout_marginTop="@dimen/_8sdp"
                android:text=" • Have tried cutting down but cannot stay within the limit you set.\n\n
• Have a physical or mental health condition that is caused or being worsened by drinking.\n\n
• Are taking medication that interacts with alcohol.\n\n
• Are or might be pregnant."
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Also yo need to consider the following factors to determine what to do."
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:layout_marginTop="@dimen/_8sdp"
                android:text=" • A family history of alcohol problems.\n\n
• Your age.\n\n
• A history of drinking-related injuries.\n\n
• Symptoms such as a sleep, pain, or anxiety disorder and sexual dysfunction."
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexendlight"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="With this in mind, tell us what you would like to do."
                android:textSize="@dimen/_12sdp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/no_border"
                android:gravity="center"
                android:fontFamily="@font/lexendmedium"
                android:text="Quit"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="18sp">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cut_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/lexendmedium"
                android:background="@drawable/no_border"
                android:gravity="center"
                android:text="Cut down"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="18sp">

            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:id="@+id/secondScreenBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_question_back"
                android:padding="@dimen/_10sdp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>