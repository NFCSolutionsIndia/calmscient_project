<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        tools:ignore="MissingConstraints"
        android:padding="@dimen/_8sdp">
        <TextView
            android:id="@+id/subSectionName"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="klkjhjkjjkgrbsnmjhgfdsfghjkhgfdjkhgfhjmhgfhhgfdghjhgfdsfghjjhgfdfghj"
            android:fontFamily="@font/lexendlight"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/black_head"/>
        <TextView
            android:id="@+id/subSectionPercentage"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="100%"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lexendlight"
            android:textColor="@color/black_head"/>
        <ImageView
            android:id="@+id/dropdownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_expand" />
    </LinearLayout>

</LinearLayout>
