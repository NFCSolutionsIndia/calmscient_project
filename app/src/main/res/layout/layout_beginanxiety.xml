<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_begin_background"
    tools:context=".activities.BeginManageAnxietyActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/lexendmedium"
            android:text="@string/discovery_lower"
            android:textColor="@color/example_7_white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_18sdp"
        android:weightSum="2"
        android:layout_marginHorizontal="@dimen/_20sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_begin"
            android:layout_weight="1"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:fontFamily="@font/lexendregular"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/example_7_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/lexendregular"
            android:text="@string/lets_begin_are_ready"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/example_7_white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/beginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_border"
            android:text="@string/lets_begin_btn"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/lexendmedium"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>