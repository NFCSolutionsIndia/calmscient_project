<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TakingControlIntroductionFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/takingControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexendmedium"
            android:text="Taking control introduction"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/viewbackgroundcolor" />

    <!--First Screen-->
    <RelativeLayout
        android:id="@+id/screenOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_44sdp"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/videoFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ExoPlayerView -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerViewLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_centerInParent="true"
                app:buffered_color="@color/example_7_button"
                app:resize_mode="fit"
                app:show_buffering="always"
                app:use_controller="true" />

            <!-- Back Icon -->
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back_white"
                android:visibility="gone" />

            <!-- Favorites Icon -->
            <ImageButton
                android:id="@+id/favoritesIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:contentDescription="Favorites"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_favorites_icon" />

            <!-- Orientation Icon -->
            <ImageButton
                android:id="@+id/orientationBtn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/playerViewLayout"
                android:layout_alignEnd="@id/playerViewLayout"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_orientation_icon"
                android:visibility="visible"
                android:contentDescription="Orientation" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/firstScreenNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_question"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!--Second Screen-->
    <RelativeLayout
        android:id="@+id/screenTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_44sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <TextView
            android:id="@+id/headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_taking_control"
            android:fontFamily="@font/lexendmedium"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black_head" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/thank_you_for_willing_to_talk_about_the_alcohol_and_drugs_now_let_s_begin_with_a_brief_assessment"
            android:fontFamily="@font/lexendlight"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/headingText"
            android:textColor="@color/black_head" />

        <ImageView
            android:id="@+id/taking_control_screening_bulb_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Bulb Icon"
            android:src="@drawable/ic_bulb_recognize"
            android:layout_below="@+id/tv_description"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="end" />

        <com.calmscient.utils.NonSwipeRecyclerView
            android:id="@+id/takingControlScreeningRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taking_control_screening_bulb_icon"
            android:layout_marginBottom="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/secondScreenNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_question"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/secondScreenPreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_question_back"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!--Third Screen -->
    <RelativeLayout
        android:id="@+id/screenThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_44sdp">


        <TextView
            android:id="@+id/tv_descriptionScreenThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/taking_control_intro_screen_three_description"
            android:fontFamily="@font/lexendlight"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_head" />

        <ImageView
            android:id="@+id/thirdScreenNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_question"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/thirdScreenPreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_question_back"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!--Fourth Screen-->
    <RelativeLayout
        android:id="@+id/screenFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_44sdp">

        <CheckBox
            android:id="@+id/dontShowCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/purple_100"
            android:checked="false"
            android:textSize="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:fontFamily="@font/lexendlight"
            android:text="@string/do_not_show_this_tutorial_from_the_next_time" />


        <androidx.cardview.widget.CardView
            android:id="@+id/drinkCoachCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="10dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/dontShowCheckBox"
            app:cardPreventCornerOverlap="false">


            <TextView
                android:id="@+id/drinkCoach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lexendlight"
                android:gravity="center"
                android:textColor="@color/purple_100"
                android:text="@string/drink_coach"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/substanceCoachCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="10dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/drinkCoachCardView"
            app:cardPreventCornerOverlap="false">


            <TextView
                android:id="@+id/substanceCoach"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lexendlight"
                android:gravity="center"
                android:textColor="@color/purple_100"
                android:text="@string/substance_coach"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_descriptionScreenFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/make_a_plan_intro_screen_four_description"
            android:fontFamily="@font/lexendlight"
            android:textSize="@dimen/_12sdp"
            android:layout_below="@+id/substanceCoachCardView"
            android:textColor="@color/black_head" />

        <ImageView
            android:id="@+id/fourthScreenPreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_question_back"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</LinearLayout>