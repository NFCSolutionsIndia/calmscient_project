<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_300sdp"
       android:layout_marginHorizontal="@dimen/_10sdp"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/dialogClose"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_close"
               android:padding="@dimen/_10sdp"
               android:layout_alignParentEnd="true"/>



       </RelativeLayout>

       <TextView
           android:id="@+id/auditHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendmedium"
           android:text="@string/audit_heading"
           android:textSize="@dimen/_14sdp"
           android:textColor="@color/black_head"/>
       <TextView
           android:id="@+id/auditSubHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendregular"
           android:text="@string/alcohol_use_disorder_identification_test"
           android:textSize="@dimen/_12sdp"
           android:textColor="@color/black_head"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/auditSubstanceCoachCardView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_4sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:clipChildren="false"
           android:clipToPadding="false"
           android:divider="@android:color/transparent"
           android:dividerHeight="0.0px"
           app:cardCornerRadius="@dimen/_3sdp"
           app:cardElevation="10dp"
           android:layout_marginBottom="@dimen/_10sdp"
           app:cardPreventCornerOverlap="false">


           <TextView
               android:id="@+id/auditDescription"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fontFamily="@font/lexendlight"
               android:gravity="left"
               android:layout_margin="@dimen/_5sdp"
               android:textColor="@color/black_head"
               android:text="@string/taking_control_dialog_1"
               android:textSize="@dimen/_12sdp" />

       </androidx.cardview.widget.CardView>

       <TextView
           android:id="@+id/dastHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendmedium"
           android:text="@string/dast_heading"
           android:textSize="@dimen/_14sdp"
           android:textColor="@color/black_head"/>
       <TextView
           android:id="@+id/dastSubHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendregular"
           android:text="@string/drug_abuse_screening_test"
           android:textSize="@dimen/_12sdp"
           android:textColor="@color/black_head"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/dastSubstanceCoachCardView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_4sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:clipChildren="false"
           android:clipToPadding="false"
           android:divider="@android:color/transparent"
           android:dividerHeight="0.0px"
           app:cardCornerRadius="@dimen/_3sdp"
           app:cardElevation="10dp"
           android:layout_marginBottom="@dimen/_10sdp"
           app:cardPreventCornerOverlap="false">


           <TextView
               android:id="@+id/dastDescription"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fontFamily="@font/lexendlight"
               android:gravity="left"
               android:layout_margin="@dimen/_5sdp"
               android:textColor="@color/black_head"
               android:text="@string/taking_control_dialog_2"
               android:textSize="@dimen/_12sdp" />

       </androidx.cardview.widget.CardView>

       <TextView
           android:id="@+id/cageHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendmedium"
           android:text="@string/cage_heading"
           android:textSize="@dimen/_14sdp"
           android:textColor="@color/black_head"/>
       <TextView
           android:id="@+id/cageSubHeading"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:fontFamily="@font/lexendregular"
           android:text="@string/cut_annoyed_guilty_and_eye"
           android:textSize="@dimen/_12sdp"
           android:textColor="@color/black_head"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/cageSubstanceCoachCardView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/_4sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:clipChildren="false"
           android:clipToPadding="false"
           android:divider="@android:color/transparent"
           android:dividerHeight="0.0px"
           app:cardCornerRadius="@dimen/_3sdp"
           app:cardElevation="10dp"
           android:layout_marginBottom="@dimen/_10sdp"
           app:cardPreventCornerOverlap="false">


           <TextView
               android:id="@+id/cageDescription"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fontFamily="@font/lexendlight"
               android:gravity="left"
               android:layout_margin="@dimen/_5sdp"
               android:textColor="@color/black_head"
               android:text="@string/taking_control_dialog_3"
               android:textSize="@dimen/_12sdp" />

       </androidx.cardview.widget.CardView>

   </LinearLayout>
</ScrollView>