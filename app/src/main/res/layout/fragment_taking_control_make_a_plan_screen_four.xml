<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_45sdp"
    android:orientation="vertical"
    tools:context=".fragments.TakingControlMakeAPlanScreenFourFragment">

    <RelativeLayout
        android:id="@+id/makeAPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexendmedium"
            android:text="Make a plan"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/viewbackgroundcolor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexendlight"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Congratulations on making a firm decision!
Let's set up a goal of your drink counts first."
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black_head"/>

        <ImageView
            android:id="@+id/make_a_plan_bulb_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Bulb Icon"
            android:src="@drawable/ic_bulb_recognize"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/drinkCount"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Your monthly drink count"
                        android:textAlignment="center"
                        android:fontFamily="@font/lexendlight"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="40"
                        android:textAlignment="center"
                        android:fontFamily="@font/lexendregular"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_28sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_14sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/drinkCountGoals"
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Monthly drink count goals"
                        android:textAlignment="center"
                        android:fontFamily="@font/lexendlight"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="XX"
                        android:textAlignment="center"
                        android:fontFamily="@font/lexendregular"
                        android:textColor="@color/purple_100"
                        android:textSize="@dimen/_28sdp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_14sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>