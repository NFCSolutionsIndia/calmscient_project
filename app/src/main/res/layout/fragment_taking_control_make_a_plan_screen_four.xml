<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_50sdp"
    android:orientation="vertical"
    tools:context=".fragments.TakingControlMakeAPlanScreenFourFragment">

    <RelativeLayout
        android:id="@+id/makeAPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexendmedium"
            android:text="@string/make_a_plan"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/makeAPlan"
        android:background="@color/viewbackgroundcolor" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/lexendlight"
                android:text="@string/make_a_plan_screen_four_desc_1"
                android:textColor="@color/black_head"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/lexendlight"
                        android:text="@string/your_total_alcohol_free_days_are"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tv_freeDaysCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:background="@color/example_7_calendar"
                        android:fontFamily="@font/lexendlight"
                        android:gravity="center"
                        android:text="90"
                        android:minWidth="@dimen/_45sdp"
                        android:textAlignment="center"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_23sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/example_7_calendar"
                        android:fontFamily="@font/lexendlight"
                        android:gravity="center_vertical"
                        android:text="@string/days"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp"
                        android:minWidth="@dimen/_40sdp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/calendarCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_10sdp">

                <com.calmscient.utils.CustomCalendarView
                    android:id="@+id/customCalendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/monthsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexendmedium"
                        android:layout_margin="@dimen/_6sdp"
                        android:text="@string/apply_same_alcohol_free_days_for_following_months"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_12sdp" />

                    <GridLayout
                        android:id="@+id/monthsGridView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:columnCount="4"
                        android:rowCount="3">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/jan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/jan"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/feb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/feb"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/march"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/mar"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/april"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/apr"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/may"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/may"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/jun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/jun"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/july"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/jul"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/aug"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/aug"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/sep"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/sep"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/oct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/oct"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/nov"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/nov"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardCornerRadius="8dp">

                            <TextView
                                android:id="@+id/dec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/purple_100"
                                android:fontFamily="@font/lexendlight"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/dec"
                                android:textAlignment="center"
                                android:textColor="@color/black_head"
                                android:textSize="@dimen/_12sdp" />
                        </androidx.cardview.widget.CardView>




                    </GridLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_8sdp"
                        app:cardCornerRadius="4dp">

                        <TextView
                            android:id="@+id/all"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/purple_100"
                            android:fontFamily="@font/lexendlight"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/all"
                            android:textAlignment="center"
                            android:textColor="@color/black_head"
                            android:textSize="@dimen/_12sdp" />
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:fontFamily="@font/lexendmedium"
                android:gravity="center"
                android:text="@string/set"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp">

        <ImageView
            android:id="@+id/previousQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:visibility="gone"
            android:src="@drawable/ic_question_back" />

        <!-- Next question ImageView -->
        <ImageView
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:src="@drawable/ic_next_question" />
    </RelativeLayout>


</RelativeLayout>