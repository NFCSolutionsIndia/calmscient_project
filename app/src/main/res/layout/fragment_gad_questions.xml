<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_35sdp"
    tools:context=".fragments.GADQuestionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.GADQuestionFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:id="@+id/PHQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/backIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:id="@+id/tv_gadtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="20dp"
                        android:text="GAD-7"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/viewbackgroundcolor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/lexendregular"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                android:text="Over the last 2 weeks, how often have you been bothered by any of the following problems?"
                android:textColor="@color/purple_100"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <!--  <androidx.viewpager2.widget.ViewPager2
                  android:id="@+id/questionViewPager"
