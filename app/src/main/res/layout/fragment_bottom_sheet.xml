<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_border"
    android:paddingBottom="10dp"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_bottom_bar" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:fontFamily="@font/lexendmedium"
                android:gravity="center"
                android:text="@string/update_time_alarm"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/img_save"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_bottom_tick" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/lexendmedium"
            android:textSize="@dimen/_12sdp"
            android:text="@string/time"
            android:textColor="@color/black_head" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:cardBackgroundColor="@color/grey_time"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false">

            <TimePicker
                android:id="@+id/timeTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/time_picker_border"
                android:calendarViewShown="false"
                android:timePickerMode="spinner"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/alarm"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/lexendmedium"
                android:textColor="@color/black_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_five"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="5"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_ten"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="10"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_fifteen"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="15"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_twenty"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="20"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_twentyfive"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="25"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_thirty"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="30"
                    android:clickable="true"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="@string/repeat"
                android:textColor="@color/black_head"
                android:fontFamily="@font/lexendmedium"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/everyday"
                android:fontFamily="@font/lexendmedium"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/example_7_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sunday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="S"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_monday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="M"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_tuesday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="T"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_wednesday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="W"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_thuresady"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="T"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_friday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="F"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text_saturday"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="S"
                    android:fontFamily="@font/lexendregular"
                    android:textColor="@color/purple_100"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>