<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_border"
    android:paddingBottom="10dp"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_bottom_bar" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:fontFamily="@font/lexendsemibold"
                android:gravity="center"
                android:text="@string/add_time_alarm"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/img_save"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_bottom_tick" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/time" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            app:cardBackgroundColor="@color/grey_time"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="false">

            <TimePicker
                android:id="@+id/timeTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/time_picker_border"
                android:calendarViewShown="false"
                android:timePickerMode="spinner" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/alarm"
                android:textColor="@color/black_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_five"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/five"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_ten"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/ten_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_fifteen"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/fifteen"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_twenty"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/twenty_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_twentyfive"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/twentyfive_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_thirty"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/thirty_selected"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:text="@string/repeat"
                android:textColor="@color/black_head" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/everyday"
                android:textColor="@color/example_7_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_sun"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/sun_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_mon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/mon_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_tue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/tue_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_wed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/wed_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_thu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/thu_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_fri"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/fri_selected"
                    tools:ignore="MissingConstraints" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_sat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/sat_selected"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
