<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_5sdp">

        <ImageView

            android:id="@+id/eventTrackerImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_10sdp"
            android:src="@drawable/ic_hangover" />

        <TextView

            android:id="@+id/eventTrackerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_70sdp"
            android:fontFamily="@font/lexendmedium"
            android:text="@string/events_tracker_text1"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_14sdp" />

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/eventTrackerToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="14sp"
            app:on="false" />
    </androidx.cardview.widget.CardView>
</LinearLayout>