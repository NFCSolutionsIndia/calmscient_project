<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_50sdp"
    android:id="@+id/root_layout"
    tools:context=".fragments.ModerationDrinkingFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/basicKnowledge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/lexendmedium"
            android:text="@string/basic_knowledge"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/viewbackgroundcolor"
        android:layout_below="@+id/basicKnowledge"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_100"
                android:text="@string/what_happens_to_your_brain_when_you_drink"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/lexendregular"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_head"
                android:text="@string/let_s_watch_the_videos"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/lexendlight"
                android:textSize="@dimen/_12sdp"/>

            <RelativeLayout
                android:id="@+id/videoFrameLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <!-- Thumbnail Image -->
                <ImageView
                    android:id="@+id/videoThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

                <ImageButton
                    android:id="@+id/playThumbnailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:contentDescription="Play"
                    android:src="@drawable/ic_play_icon"
                    android:visibility="visible" />

                <!-- ExoPlayerView -->
                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/playerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:buffered_color="@color/example_7_button"
                    app:resize_mode="fit"
                    android:visibility="gone"
                    app:show_buffering="always"
                    app:use_controller="true" />

                <!-- Back Icon -->
                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Back"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back_white"
                    android:visibility="gone" />

                <!-- Favorites Icon -->
                <ImageButton
                    android:id="@+id/favoritesIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Favorites"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_favorites_icon" />

                <!-- Orientation Icon -->
                <ImageButton
                    android:id="@+id/orientationBtn"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/playerViewLayout"
                    android:layout_alignEnd="@id/playerViewLayout"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_orientation_icon"
                    android:visibility="gone"
                    android:contentDescription="Orientation" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_head"
                android:text="@string/quit_drinking_description"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/lexendlight"
                android:textSize="@dimen/_12sdp"/>



        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/completeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/complete_button_background"
        android:fontFamily="@font/lexendregular"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/_10sdp"/>


</RelativeLayout>