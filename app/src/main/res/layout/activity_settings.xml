<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".Settings">
        <RelativeLayout
            android:id="@+id/Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="20dp"
                android:text=" Settings"
                android:textColor="#000000"
                android:textSize="25sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ProfileImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/profileimage_icon" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="94dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/uploadimage_icon" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />

        <RelativeLayout
            android:id="@+id/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilesettings1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:text="Profile"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />
        <RelativeLayout
            android:id="@+id/Theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/theme_icon" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="45dp"
                android:text="Theme"
                android:textColor="#000000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="33dp"
                android:text="Dark Mode"
                android:textColor="#6E6BB3"
                android:textSize="14sp" />
            <com.github.angads25.toggle.widget.LabeledSwitch
                android:id="@+id/id_switch"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="130dp"
                android:textSize="14sp"
                app:colorBorder="@color/colorPrimary"
                app:on="false" />
        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />
        <RelativeLayout
            android:id="@+id/Languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/languages_icon" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_marginTop="7dp"
                android:layout_marginStart="45dp"
                android:text="Languages"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:weightSum="2"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:id="@+id/English"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:weightSum="1"
                android:background="@drawable/rectangle_layout"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/flagenglish_icon" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="9dp"
                    android:text="English"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Spanish"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginStart="150dp"
                android:weightSum="1"
                android:background="@drawable/rectangle_layout"
                android:clickable="true">
                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/spanishflag_icon"/>
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"

                    android:layout_marginStart="50dp"
                    android:text="Spanish"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ASL"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rectangle_layout"
            android:clickable="true">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/asl_icon"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:text="ASL"
                android:textColor="#000000"
                android:textSize="14dp" />
        </RelativeLayout>



        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />

        <RelativeLayout
            android:id="@+id/Notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="48dp">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/notifications_icon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:text="Notifications"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />

        <RelativeLayout
            android:id="@+id/HelpSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/helpsupport_icon" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:text="Help &amp; Support "
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="48dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="45dp"
                android:layout_marginTop="7dp"
                android:text="Logout"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/viewbackgroundcolor"
            />
    </LinearLayout>
</LinearLayout>
