        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/English"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_layout"
                android:clickable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_flag_english" />

                <TextView
                    android:id="@+id/tv_english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/english"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@drawable/white_circle"
                android:layout_gravity="center">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/progressBar_AV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:indicatorColor="@color/colorPrimaryDark"
                    app:indicatorName="BallClipRotatePulseIndicator" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/Spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toRightOf="@+id/English"
                android:background="@drawable/rectangle_layout"
                android:clickable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_flag_spanish" />

                <TextView
                    android:id="@+id/tv_spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/spanish"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ASL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toRightOf="@+id/Spanish"
                android:background="@drawable/rectangle_layout"
                android:clickable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/asl_icon" />

                <TextView
                    android:id="@+id/tv_asl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="ASL"
                    android:textColor="#000000"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />
        <RelativeLayout
            android:id="@+id/privacyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="40dp"
            android:contextClickable="true">

            <ImageView
                android:id="@+id/imageViewPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_privacy" />

            <TextView
                android:id="@+id/tv_Privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:fontFamily="@font/lexendregular"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:textAllCaps="false"
                android:text="@string/privacy"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />
        <RelativeLayout
            android:id="@+id/Notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:fontFamily="@font/lexendmedium"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/notifications"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <RelativeLayout
            android:id="@+id/lincensekey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/Lincenseimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_license" />

            <TextView
                android:id="@+id/lincensetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:fontFamily="@font/lexendmedium"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="@string/license_key"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <RelativeLayout
            android:id="@+id/HelpSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_helpsupport" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:fontFamily="@font/lexendmedium"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/help_support"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logout" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_vertical"
                android:fontFamily="@font/lexendmedium"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/logout"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

    </LinearLayout>

</LinearLayout>
