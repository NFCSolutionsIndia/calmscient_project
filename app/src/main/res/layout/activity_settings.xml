<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:id="@+id/settingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".Settings"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lexendmedium"
                android:text="@string/settings"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_16sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ProfileImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="20dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/profile_pic"/>

            <ImageView
                android:id="@+id/uploadImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="94dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/uploadimage_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/lexendlight"
            android:gravity="end"
            android:text="@string/version"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_11sdp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_profile_settings" />

                    <TextView
                        android:id="@+id/tv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/Theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_theme_mode" />

                    <TextView
                        android:id="@+id/tv_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/tv_darkTheme"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="33dp"
                        android:fontFamily="@font/lexendmedium"
                        android:text="@string/dark_mode"
                        android:textColor="#6E6BB3"
                        android:textSize="12sp" />

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/darkThemeToggleButton"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="30dp"
                        android:textSize="14sp"
                        app:colorBorder="@color/colorPrimary"
                        app:on="false" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/Languages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/iv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_language" />

                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <RelativeLayout
                        android:id="@+id/English"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_layout"
                        android:clickable="true"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/iv_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:scaleType="center"
                            android:src="@drawable/ic_flag_english" />

                        <TextView
                            android:id="@+id/tv_english"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="@string/english"
                            android:textColor="#000000"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/progress_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/white_circle"
                        android:padding="20dp"
                        android:visibility="gone">

                        <com.wang.avi.AVLoadingIndicatorView
                            android:id="@+id/progressBar_AV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:indicatorColor="@color/colorPrimaryDark"
                            app:indicatorName="BallClipRotatePulseIndicator" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Spanish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/English"
                        android:background="@drawable/rectangle_layout"
                        android:clickable="true"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/iv_spanish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:scaleType="center"
                            android:src="@drawable/ic_flag_spanish" />

                        <TextView
                            android:id="@+id/tv_spanish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="@string/spanish"
                            android:textColor="#000000"
                            android:textSize="10sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ASL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/Spanish"
                        android:background="@drawable/rectangle_layout"
                        android:clickable="true"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/iv_asl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:scaleType="center"
                            android:src="@drawable/asl_icon" />

                        <TextView
                            android:id="@+id/tv_asl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="ASL"
                            android:textColor="#000000"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/privacyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_privacy" />

                    <TextView
                        android:id="@+id/tv_Privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/lexendmedium"
                        android:textAllCaps="false"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/Notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_notifications" />

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/lincensekey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="9dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_license" />

                    <TextView
                        android:id="@+id/tv_lincense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/HelpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_help_and_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_helpsupport" />

                    <TextView
                        android:id="@+id/tv_help_and_support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />

                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:minHeight="40dp">

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_vertical"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:fontFamily="@font/lexendmedium"
                        android:textColor="@color/black_head"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/viewbackgroundcolor" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
