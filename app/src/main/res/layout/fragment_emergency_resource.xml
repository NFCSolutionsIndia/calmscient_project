<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EmergencyResourceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="10sp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/backToHomeFragment"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:src="@drawable/ic_back" />
            <!--<ImageView
                android:id="@+id/backToHomeFragment"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_back" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/emergency_resource"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/example_7_calendar"
            android:orientation="horizontal"
            android:padding="15sp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/doctor"
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@drawable/ic_doctor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13sp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/doctor_name"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_name"
                    android:textColor="@color/hospital_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/phoneNumberHospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/doctor_phone_number"
                    android:textColor="@color/purple_100"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/suicide_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suicideHelpLineNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:justificationMode="inter_word"
                android:text="@string/suicide_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F4F3FF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/learnmore_suicide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_next_learn"
                        android:maxLines="1"
                        android:text="Learn more "
                        android:textColor="@color/purple_100" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/disaster_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disaster_distress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:justificationMode="inter_word"
                android:text="@string/disaster_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/disaster_distress_helpline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F4F3FF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/learnmore_distress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_next_learn"
                        android:maxLines="1"
                        android:text="Learn more "
                        android:textColor="@color/purple_100" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/disaster_distress_helpline"
                android:layout_width="100sp"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background_cancel"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_next"
                android:text="Learn More"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="14sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>-->

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/crisis_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crisis_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:justificationMode="inter_word"
                android:text="@string/crisis_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/crisis_text_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F4F3FF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/learnmore_crisis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_next_learn"
                        android:maxLines="1"
                        android:text="Learn more "
                        android:textColor="@color/purple_100" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/crisis_text_line"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background_cancel"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_next"
                android:text="Learn More"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="14sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>-->

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trevor_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trevor_project_helplineNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:justificationMode="inter_word"
                android:text="@string/trevor_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/trevor_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F4F3FF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/learnmore_trevor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_next_learn"
                        android:maxLines="1"
                        android:text="Learn more "
                        android:textColor="@color/purple_100" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/trevor_project"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background_cancel"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_next"
                android:text="Learn More"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="14sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>-->

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trans_helpline_heading"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trans_lifeline_helpLineNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/montserratregular"
                android:justificationMode="inter_word"
                android:text="@string/trans_helpline_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/trans_lifeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#F4F3FF"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/learnmore_trans_lifeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_next_learn"
                        android:maxLines="1"
                        android:text="Learn more "
                        android:textColor="@color/purple_100" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/trans_lifeline"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/custom_button_background_cancel"
                android:clickable="true"
                android:drawableRight="@drawable/ic_next"
                android:text="Learn More"
                android:textAllCaps="false"
                android:textColor="@color/purple_100"
                android:textSize="14sp"
                android:textStyle="bold" />-->

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewbackgroundcolor" />


    </LinearLayout>

</ScrollView>