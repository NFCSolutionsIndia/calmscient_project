<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/taking_control_screenings_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_border"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:paddingBottom="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_30sdp"
        app:cardPreventCornerOverlap="false">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/dialog_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_screeningName"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lexendmedium"
                android:textSize="@dimen/_14sdp"
                android:gravity="center_vertical"
                android:textColor="@color/black_head"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_doesnt_apply"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="2"
                android:background="@drawable/taking_control_button_border"
                android:fontFamily="@font/lexendmedium"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="@dimen/_12sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </androidx.appcompat.widget.LinearLayoutCompat>>


</androidx.cardview.widget.CardView>