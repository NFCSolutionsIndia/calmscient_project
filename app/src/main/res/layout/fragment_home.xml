<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_profile1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:clickable="true"
        android:src="@drawable/accounticon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/greetingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexendlight"
            android:text="@string/hello"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_26sdp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/lexendsemibold"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_26sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexendextralight"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:text="@string/happy_to_see_you"
        android:textColor="@color/black_head"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/greetingsLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Medical Records Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/myMedicalRecordsLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/mymedicalrecords" />

            <TextView
                android:id="@+id/my_medical_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/lexendregular"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_next_new" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Weekly Summary Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/weeklySummaryLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        app:layout_constraintTop_toBottomOf="@id/myMedicalRecordsLayout"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/weekly_summary" />

            <TextView
                android:id="@+id/weekly_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/lexendregular"
                android:textColor="@color/black_head"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_next_new" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lexendregular"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklySummaryLayout"
        app:layout_constraintBottom_toTopOf="@id/recyclerViewVideos" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVideos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/favorites"
        app:layout_constraintBottom_toTopOf="@id/needToTalkWithSomeOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Need to Talk Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/needToTalkWithSomeOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewVideos"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/lexendregular"
        android:text="@string/need_to_talk"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
