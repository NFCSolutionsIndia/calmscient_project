<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.FourSevenEightBreathingExerciseFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/_4_7_8_breathing_exercise"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="@color/black_head"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/lexendmedium" />

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/viewbackgroundcolor"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:elevation="@dimen/_8sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preparation"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black_head"
                        android:fontFamily="@font/lexendregular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First find a comfortable seated position. Ensure that you are at ease before beginning the rhythmic breathing pattern.\n\nPlace the tip of your tongue gently against the tissue just behind your top front teeth"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="@color/black_head"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:fontFamily="@font/lexendlight"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let’s learn how to do the 4-7-8 breathing exercise."
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black_head"
                    android:fontFamily="@font/lexendregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/verticalLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp">

                        <!-- Vertical Line -->
                        <View
                            android:id="@+id/progressBar2"
                            android:layout_width="@dimen/_2sdp"
                            android:layout_height="0dp"
                            android:background="@color/purple_100"
                            app:layout_constraintTop_toTopOf="@+id/step1Indicator"
                            app:layout_constraintBottom_toBottomOf="@+id/step5Indicator"
                            app:layout_constraintStart_toStartOf="@+id/step1Indicator"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.02"/>

                        <!-- Guidelines for evenly spacing the indicators -->
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.2"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.4"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.6"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.8"
                            android:orientation="horizontal" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="1.0"
                            android:orientation="horizontal" />

                        <!-- Step 1 Indicator -->
                        <ImageView
                            android:id="@+id/step1Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/guideline1"/>

                        <!-- Step 2 Indicator -->
                        <ImageView
                            android:id="@+id/step2Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline1"
                            app:layout_constraintBottom_toTopOf="@id/guideline2"/>

                        <!-- Step 3 Indicator -->
                        <ImageView
                            android:id="@+id/step3Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline2"
                            app:layout_constraintBottom_toTopOf="@id/guideline3"/>

                        <!-- Step 4 Indicator -->
                        <ImageView
                            android:id="@+id/step4Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline3"
                            app:layout_constraintBottom_toTopOf="@id/guideline4"/>

                        <!-- Step 5 Indicator -->
                        <ImageView
                            android:id="@+id/step5Indicator"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_purple_circle"
                            app:layout_constraintStart_toStartOf="@id/progressBar2"
                            app:layout_constraintEnd_toEndOf="@id/progressBar2"
                            app:layout_constraintTop_toBottomOf="@id/guideline4"
                            app:layout_constraintBottom_toTopOf="@id/guideline5"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 1: Emptying the lungs"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Begin by completely emptying your lungs of air. Allow yourself a moment to release any tension."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 2: Inhaling quietly"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Inhale quietly through your nose, counting to 4 seconds. Fell the breath entering your body, bringing calmness."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 3: Hold the breath"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hold your breath for  a steady count of 7 seconds. Embrace the stillness within, allowing the breath to settle."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 4: Force exhalation"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Exhale forcefully through your mouth, pursing your lips, and create a distinct “whoosh” sound for 8 seconds. Feel the release of tension as you expel the breath."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Step 5: Repeat the process"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendregular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Repeat this entire cycle up to 4 times. Each repetition contributes to a deepening sense of relaxation."
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:textColor="@color/black_head"
                                android:fontFamily="@font/lexendlight"/>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>